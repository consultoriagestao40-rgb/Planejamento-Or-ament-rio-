generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses direct connection
}

model Tenant {
  id           String   @id @default(uuid())
  name         String
  cnpj         String   @unique
  accessToken  String?
  refreshToken String?
  tokenExpiresAt DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  budgets      BudgetEntry[]
}

model BudgetEntry {
  id           String   @id @default(uuid())
  tenantId     String
  categoryId   String   // ID coming from Conta Azul (UUID usually)
  categoryName String   // Store name to show without fetching if needed
  costCenterId String?  // Optional
  month        Int      // 1-12
  year         Int
  amount       Float
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant       Tenant   @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, categoryId, costCenterId, month, year])
}
